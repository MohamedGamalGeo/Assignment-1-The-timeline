<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css" />
    <title>Assignment 1 - The Timeline</title>
</head>
<body>

    <div class="timeline-container">
        <h1>The Timeline</h1>
        <% if (user_data.length !== 0) { %>
            <% user_data.forEach((user) =>  { %>
                <div class="user-card">
                    <h2><%= user.name %></h2>
                    <h4><%= user.createdAt %></h4>
                    <p><%= user.message %></p>
                </div>
            <% }) %>
        <% } else { %>
            <h1 class="no-data">No data available</h1>
        <% } %>
    </div>

    <!-- Form to add new user data -->
    <form action="/add-user" method="POST" class="user-form">
        <label for="id">ID:</label>
        <input type="text" name="id" id="id">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>

        <label for="createdAt">Date:</label>
        <input type="text" id="createdAt" name="createdAt" placeholder="e.g., 01-01-2022" required>

        <label for="message">Message:</label>
        <textarea id="message" name="message" required></textarea>

        <button type="submit">Add User</button>
    </form>


</body>
</html>

